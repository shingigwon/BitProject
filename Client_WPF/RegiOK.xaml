<Window x:Name="OK" x:Class="MCB.RegiOK"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MCB"
        mc:Ignorable="d" ResizeMode="NoResize"
        Title="회원가입 완료" Height="200" Width="280" Closing="Window_Closing">
    <Grid Background="Wheat">
        <Border Background="White" BorderBrush="Transparent" 
                BorderThickness="10"  CornerRadius="25" Grid.Row="1">
            <Grid>
                <Image x:Name="okicon" HorizontalAlignment="Left" Height="39" Margin="43,36,0,0" VerticalAlignment="Top" Width="44" Source="/Resources/OkIcon.png" RenderTransformOrigin="0.427,0.912"/>
                <TextBlock Name ="TextB" HorizontalAlignment="Left" TextWrapping="Wrap" 
                           Text="회원가입 완료" FontFamily="나눔고딕" FontWeight="ExtraBold" 
                           FontSize="15" VerticalAlignment="Top" Margin="97,47,0,0" Height="17" RenderTransformOrigin="0.573,1.107"/>

                <Button x:Name="Btn_OK" Content="OK" HorizontalAlignment="Center"
                        Background="MediumSeaGreen" Foreground="White"
                        Margin="0,98,0,0" VerticalAlignment="Top" 
                        FontFamily="나눔고딕" FontWeight="ExtraBold" Width="56" Height="22" Click="OK_Button_Click"/>
            </Grid>
        </Border>
    </Grid>
</Window>
